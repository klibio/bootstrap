script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"
export KLIBIO=$(echo ${script_dir}/.klibio)

# java settings
if [ -f ${KLIBIO}/set-java.sh ]
then
  # append klibio tools folder to path
  export PATH=${PATH}:${KLIBIO}
  # configure default java to version 17
  set-java.sh 17
fi

# define bash prompt
if [[Â "$SHELL" == *"/bin/bash"* ]]
then 
  PS1="\D{%Y%m%d-%H%M%S} \u@\H:\w jobs=\j\n$ "
fi

# load aliases
if [ -f ${script_dir}/.klibio_alias ]
then
  . ${script_dir}/.klibio_alias
fi
